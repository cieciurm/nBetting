@using NBetting.Web.Helpers.Types
@using NBetting.Web.Controllers

<script>
    function ApiUrlsService() {
        var self = this;

        self.getMyTournamentsUrl = function () {
            return '@Url.RouteUrl("Api", new { controller = ControllerNamesHelper.GetName<TournamentsController>(),
                    action = ControllerNamesHelper.GetActionName<TournamentsController>(x => x.Index()) })';
        }

        self.getAddEditTournamentUrl = function () {
            return '@Url.RouteUrl("Api", new { controller = ControllerNamesHelper.GetName<TournamentsController>(),
                    action = ControllerNamesHelper.GetActionName<TournamentsController>(x => x.Save(null)) })';
        }

        self.getTournamentUrl = function (id) {
            return 'api/tournaments/' + id;
        }
    }

    angular.module('NBetting.Common')
           .service(ApiUrlsService.name, ApiUrlsService);
</script>